<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/user_list_fragment">

    <fragment
        android:id="@+id/user_list_fragment"
        android:name="com.moov.moovapp.view.UserListFragment"
        android:label="ItemListFragment">
        <action
            android:id="@+id/show_user_detail"
            app:destination="@id/user_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/user_detail_fragment"
        android:name="com.moov.moovapp.view.UserDetailFragment"
        android:label="user_detail"
        tools:layout="@layout/fragment_user_detail">
        <argument
            android:name="user_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>